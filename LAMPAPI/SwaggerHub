# tags are used for organizing operations
tags:
- name: admins
  description: Secured Admin-only calls
- name: developers
  description: Operations available to regular developers

paths:
  /Login.php:
    post:
      tags:
      - Users
      summary: Logs into contacts app
      operationId: doLogin
      description: Logs into contacts app
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: loginItem
        description: Login
        schema:
          $ref: '#/definitions/Login'
      responses:
        200:
          description: OK
        404:
          description: URL Not Found
          
  
  /Register.php:
    post:
      tags:
      - Users
      summary: Registers a new user
      operationId: doRegister
      description: registers a new user to the application
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: registerItem
        description: register
        schema:
          $ref: '#/definitions/Register'
      responses:
        200:
          description: OK
        404:
          description: URL Not Found

  /SearchContact.php:
    post:
      tags:
      - contacts
      summary: Searches contacts
      operationId: searchContact
      description: Searches contacts from the contacts app database
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: searchItem
        description: contact search
        schema:
          $ref: '#/definitions/Search'
      responses:
        200:
          description: OK
        400:
          description: URL Not Found
          
  /UpdateContact.php:
    post:
      tags:
      - contacts
      summary: Updates Contacts
      operationId: updateContact
      description:  Updates contacts in the contacts app database
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: updateItem
        description: Contact Update
        schema:
          $ref: '#/definitions/Update'
      responses:
        200:
          description: OK
        400:
          description: URL Not Found
          
  /AddContact.php:
    post:
      tags:
      - contacts
      summary: Adds a new contact
      operationId: addContact
      description: adds a new contact to the logged in user's account
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: contactItem
        description: Contact Information
        schema:
          $ref: '#/definitions/Contact'
      responses:
        200:
          description: OK
        400:
          description: URL Not Found
          
  /DeleteContact.php:
    post:
      tags:
      - contacts
      summary: Deletes a contact
      operationId: deleteContact
      description: deletes a contact from the logged in user's account
      consumes:
      - application/json
      produces:
      - application/json
      parameters:
      - in: body
        name: contactItem
        description: Contact
        schema:
          $ref: '#/definitions/Contact'
      responses:
        200:
          description: OK
        400:
          description: URL Not Found

        

definitions:
  Login:
    type: object
    required:
    - login
    - password
    properties:
      login:
        type: string
        example: "fred"
      password:
        type: string
        example: "secret"
        
  Register:
    type: object
    required:
    - firstName
    - lastName
    - login
    - password
    properties:
      firstName:
        type: string
        example: "john"
      lastName:
        type: string
        example: "doe"
      login:
        type: string
        example: "username"
      password:
        type: string
        example: "password"
    
  Contact:
    type: object
    required:
    - userId
    - firstName
    - lastName
    properties:
      userId:
        type: integer
        example: 1
      firstName:
        type: string
        example: "john"
      lastName:  
        type: string
        example: "Doe"
        
  Search:
    type: object
    required:
    - userId
    - search
    properties:
      userId:
        type: integer
        example: 3
      search:
        type: string
        example: "john"
        
  Update:
    type: object
    required:
    - contact
    - userId
    - updateWith
    properties:
      contact:
        type: string
        example: "mop"
      userId:
        type: integer
        example: 4
      updateWith:
        type: string
        example: "bob"

host: 143.198.109.82
basePath: /LAMPAPI/
schemes:
  - http
